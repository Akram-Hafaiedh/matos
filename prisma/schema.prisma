generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ===================
// Core Business Models
// ===================

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts") // Maps to your existing table name
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions") // Maps to your existing table name
}

model User {
  id             String          @id @default(cuid()) // Ensure this matches your auth model
  name           String?
  email          String?         @unique
  emailVerified  DateTime?       @map("email_verified")
  password       String?         @db.VarChar(255)
  image          String?
  phone          String?         @db.VarChar(20) // Your custom field
  address        String? // Your custom field
  role           String          @default("customer") @db.VarChar(50) // Your custom field
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
  // Relations
  accounts       Account[]
  sessions       Session[]
  // Your restaurant relations
  orders         Order[]
  cartSessions   CartSession[]
  supportTickets SupportTicket[]
  ticketMessages TicketMessage[]
  notifications  Notification[]
  reviews        Review[]
  loyaltyPoints  Int             @default(0) @map("loyalty_points")

  @@map("users") // Ensure this matches your existing table
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Category {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(255)
  emoji        String?  @db.VarChar(10)
  displayOrder Int      @default(0) @map("display_order")
  showInHero   Boolean  @default(false) @map("show_in_hero")
  heroTitle    String?  @map("hero_title") @db.VarChar(255)
  heroSubtitle String?  @map("hero_subtitle")
  heroColor    String?  @map("hero_color") @db.VarChar(100)
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")

  // Relation: A Category can have many MenuItems
  menuItems MenuItem[]

  @@map("categories")
}

model MenuItem {
  id            Int      @id @default(autoincrement())
  name          String   @db.VarChar(255)
  description   String?
  price         Json // Flexible: number like 15.5 or object like {"xl": 10, "xxl": 12}
  originalPrice Float?   @map("original_price")
  categoryId    Int?     @map("category_id")
  imageUrl      String?  @map("image_url") @db.VarChar(500)
  emoji         String?  @db.VarChar(10)
  ingredients   String[] // PostgreSQL native array
  popular       Boolean  @default(false)
  bestseller    Boolean  @default(false)
  hot           Boolean  @default(false)
  discount      Int?
  sauce         String?  @db.VarChar(50) // 'rouge' or 'blanche'
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  category   Category?   @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]
  reviews    Review[]

  @@map("menu_items")
}

model Promotion {
  id             Int       @id @default(autoincrement())
  name           String    @db.VarChar(255)
  description    String?
  price          Float?
  originalPrice  Float?    @map("original_price")
  discount       Int?
  imageUrl       String?   @map("image_url") @db.VarChar(500)
  emoji          String?   @db.VarChar(10)
  badgeText      String?   @map("badge_text") @db.VarChar(50)
  badgeColor     String?   @map("badge_color") @db.VarChar(50)
  isActive       Boolean   @default(true) @map("is_active")
  startDate      DateTime? @map("start_date")
  endDate        DateTime? @map("end_date")
  conditions     String?
  selectionRules Json?     @map("selection_rules")
  createdAt      DateTime  @default(now()) @map("created_at")

  // Relations
  orderItems OrderItem[]

  @@map("promotions")
}

// ======================
// Order & Cart Models
// ======================

model Order {
  id              Int       @id @default(autoincrement())
  orderNumber     String    @unique @map("order_number") @db.VarChar(50)
  userId          String?   @map("user_id")
  customerName    String    @map("customer_name") @db.VarChar(255)
  customerPhone   String    @map("customer_phone") @db.VarChar(20)
  customerEmail   String?   @map("customer_email") @db.VarChar(255)
  deliveryAddress String    @map("delivery_address")
  city            String    @default("Tunis") @db.VarChar(100)
  notes           String?
  deliveryTime    String    @default("asap") @map("delivery_time") @db.VarChar(50) // 'asap' or 'scheduled'
  scheduledTime   DateTime? @map("scheduled_time")
  paymentMethod   String    @default("cash") @map("payment_method") @db.VarChar(50) // 'cash' or 'd17'
  subtotal        Float
  deliveryFee     Float     @default(0) @map("delivery_fee")
  totalAmount     Float     @map("total_amount")
  status          String    @default("pending") @db.VarChar(50) // 'pending', 'confirmed', 'preparing', 'delivering', 'delivered', 'cancelled'
  orderDate       DateTime  @default(now()) @map("order_date")
  deliveredAt     DateTime? @map("delivered_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  user           User?           @relation(fields: [userId], references: [id])
  orderItems     OrderItem[]
  supportTickets SupportTicket[]

  @@map("orders")
}

model OrderItem {
  id           Int      @id @default(autoincrement())
  orderId      Int      @map("order_id")
  menuItemId   Int?     @map("menu_item_id")
  itemName     String   @map("item_name") @db.VarChar(255)
  itemPrice    Float    @map("item_price")
  quantity     Int      @default(1)
  selectedSize String?  @map("selected_size") @db.VarChar(50)
  notes        String?
  promotionId  Int?     @map("promotion_id")
  choices      Json?    @map("choices")
  createdAt    DateTime @default(now()) @map("created_at")

  // Relations
  order     Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem  MenuItem?  @relation(fields: [menuItemId], references: [id])
  promotion Promotion? @relation(fields: [promotionId], references: [id])

  @@map("order_items")
}

model CartSession {
  id          String   @id @default(uuid())
  userId      String?  @map("user_id")
  sessionData Json     @map("session_data")
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("cart_sessions")
}

// ======================
// Support Models
// ======================

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  email     String   @db.VarChar(255)
  phone     String?  @db.VarChar(20)
  subject   String   @db.VarChar(255)
  message   String
  status    String   @default("unread") @db.VarChar(50) // 'unread', 'read', 'replied'
  createdAt DateTime @default(now()) @map("created_at")

  @@map("contact_messages")
}

model SupportTicket {
  id          Int      @id @default(autoincrement())
  userId      String?  @map("user_id")
  orderId     Int?     @map("order_id")
  subject     String   @db.VarChar(255)
  description String   @db.Text
  status      String   @default("open") @db.VarChar(50) // 'open', 'in_progress', 'resolved', 'closed'
  priority    String   @default("medium") @db.VarChar(20) // 'low', 'medium', 'high', 'urgent'
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  lastAdminTypingAt DateTime? @map("last_admin_typing_at")
  lastUserTypingAt  DateTime? @map("last_user_typing_at")

  // Relations
  user     User?           @relation(fields: [userId], references: [id])
  order    Order?          @relation(fields: [orderId], references: [id])
  messages TicketMessage[]

  @@map("support_tickets")
}

model TicketMessage {
  id          Int      @id @default(autoincrement())
  ticketId    Int      @map("ticket_id")
  userId      String   @map("user_id")
  message     String   @db.Text
  attachments Json?    @map("attachments") // Array of { name: string, url: string, type: string }
  isAdmin     Boolean  @default(false) @map("is_admin")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user   User          @relation(fields: [userId], references: [id])

  @@map("ticket_messages")
}

model Review {
  id         Int      @id @default(autoincrement())
  userId     String   @map("user_id")
  menuItemId Int      @map("menu_item_id")
  rating     Int      @default(5)
  comment    String?  @db.Text
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  user     User     @relation(fields: [userId], references: [id])
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@map("reviews")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id")
  title     String   @db.VarChar(255)
  message   String   @db.Text
  type      String   @db.VarChar(50) // 'order_update', 'ticket_response', 'promotion', etc.
  link      String?  @db.VarChar(255) // Optional link to the relevant page
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model GlobalSettings {
  id      Int    @id @default(1)
  address String @default("2015, 1 Rue Abderrazak Karabaka, Carthage") @db.VarChar(255)
  phone   String @default("99 956 608") @db.VarChar(50)
  lat     Float  @default(36.8391)
  lng     Float  @default(10.3200)

  // Social Links
  facebook  String? @db.VarChar(255)
  instagram String? @db.VarChar(255)
  tiktok    String? @db.VarChar(255)
  whatsapp  String? @db.VarChar(50)

  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("global_settings")
}
